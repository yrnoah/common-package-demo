{
  "processors": [
    "stylelint-processor-styled-components"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-styled-components",
    "stylelint-prettier/recommended"
  ],
  "plugins:": [
    "stylelint-prettier"
  ],
  "rules": {
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": [/-styled-mixin\d+/]
      }
    ],
    "prettier/prettier": true
  }
}